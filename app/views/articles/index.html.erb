<p id="notice"><%= notice %></p>

<h2><%= @board.title %></h2>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td>
          <% unless article.img_url.nil? %>
          <img src="<%= article.img_url %>" />
          <% end %>
        </td>
        <td><%= article.title %></td>
        <td><%= article.content %></td>
        <td><%= link_to 'Show', article_path(@board, article) %></td>
        <td><%= link_to 'Edit', edit_article_path(@board, article) %></td>
        <td><%= link_to 'Destroy', [@board, article] , method: :delete ,data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Article', new_article_path %>
