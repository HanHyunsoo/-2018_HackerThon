<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">First</th>
      <th scope="col">Last</th>
      <th scope="col">Handle</th>
    </tr>
  </thead>
  <tbody>
    <% @user.each do |u| %>
        <% if u.authorization == '2' %>
            <tr>
              <th scope="row"><%= each.count %></th>
              <td><%= u.name %></td>
              <td>Otto</td>
              <td>@mdo</td>
            </tr>
        <% end %>
    <% end %>
  </tbody>
</table>