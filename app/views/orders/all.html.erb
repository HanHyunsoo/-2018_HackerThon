  <h1>All Orders</h1>
    <div class="datagrid">
        <table>
          <thead>
            <tr>
              <th>Total</th>
              <th align="center">Datetime</th>
              <th>User</th>
              <th colspan="1"></th>
            </tr>
          </thead>
        
          <tbody>
            <% @orders.each do |order| %>
              <tr>
                <td><%= order.total %></td>
                <td><%= order.user.name %></td>
                <td>
                    <%= link_to 'View', order %>
                    <%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %>

                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
    </div>    
<% end %>