


<div class="container">
  <table class="table table-hover">
    <h1>주문 내역</h1>
    <thead>
      <tr>
        <th scope="col">사진</th>
        <th scope="col">가격</th>
        <th scope="col">갯수</th>
      </tr>     
    </thead>
    
    
    
      <tbody>
        <% @orders.each do |cart| %>
          <tr>
            <td ><%= image_tag(cart.good.image_url)%></td>
            <td><%= cart.good.price %></td>
            <td ><%= cart.quantity %></td>
            <td><%= link_to '취소', root_url + "cart/" + cart.id.to_s , method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table> 
  
    <p>
      <strong>Total:</strong>
      <%= @order.total %>
    </p>




  <%= link_to '뒤로가기', orders_path %>
</div>
